
<div class="jumbotron">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {<p>
            Address: @Html.TextBox("address")

            <input type="submit" value="Show map" />
        </p>
    }
    @if (IsPost)
    {
        @ViewData["Lat"]
        @ViewData["Lng"]
        <div id="map"></div>
    }
    <script>
        var map;
        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: -34.397, lng: 150.644 },
                zoom: 8
            });
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBIeDWTn7QhIeRzokoz7VndonQANW4-Wdg&callback=initMap"
            async defer></script>
</div>

